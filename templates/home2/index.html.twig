{% extends 'base.html.twig' %}

{% block title %}Formations{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<h1> Liste de mes formation suivie </h1>
{# la première boucle for pour selections les université dans la table de l'universite #}
    {% for universites in universite %}
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="collapse navbar-collapse" id="navbarColor01">
                <div class="example-wrapper">
                    <div class="nav-item "> 
                    {# la selection des attributts nom et lien de l'université qui vont s'affiché pour la jointure #}                   
                        <h4> {{ universites.nom|capitalize }}
                            <br>
                            <a href="{{ universites.lien|capitalize }}">lien de l'université</a>
                        </h4>
                    </div> 
                    {# la realtion entre l'entity formation et l'université et de types de 0 à N
                    donc j'ai fait une jointure des deux entity  #}              
                    {% for formations in universites.formation %}
                    <div class="nav-item ">                    
                        <li>{{formations.nom|capitalize}}</li>    
                        <h3>{{formations.niveau|capitalize}}</h3>        
                        <h4>{{formations.annee}}</h4>
                    </div>
                    {% endfor %}
                </div>           
            </div> 
        </nav>
    {% endfor %}
{% endblock %}
